<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.webmne.salestracker.widget.TfTextView
            android:id="@+id/letterIcon"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_42dp"
            android:background="@drawable/letter_shape"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="@dimen/XXL_TEXT" />

        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_42dp"
            android:background="@drawable/check_shape"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/ic_check_white_24dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.webmne.salestracker.widget.TfTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="@dimen/XL_TEXT" />

            <com.webmne.salestracker.widget.TfTextView
                android:id="@+id/txtLocaion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="Ankleshwar, Gujarat"
                android:textSize="@dimen/N_TEXT" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:src="@drawable/ic_call" />

            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_8dp"
                android:src="@drawable/ic_email" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
