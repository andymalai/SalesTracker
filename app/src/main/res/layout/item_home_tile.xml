<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_40dp"
    android:paddingTop="@dimen/dimen_40dp">

    <ImageView
        android:id="@+id/imgHomeTileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="@drawable/round_shape"
        android:gravity="center"
        android:padding="@dimen/dimen_16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_agent"
        android:tint="@color/half_black" />

    <com.webmne.salestracker.widget.TfTextView
        android:id="@+id/txtHomeTileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:gravity="center"
        android:text="Tile"
        android:textColor="@color/half_black"
        android:textSize="@dimen/XL_TEXT" />

</LinearLayout>