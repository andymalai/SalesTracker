<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dimen_4dp"
        android:background="@drawable/selector_round_shape"
        android:orientation="vertical"
        android:padding="@dimen/dimen_1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.webmne.salestracker.widget.TfTextView
                android:id="@+id/txtDay"
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="@dimen/dimen_28dp"
                android:background="@color/tile1"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/white" />

            <View
                android:layout_width="@dimen/dimen_.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:background="@color/white" />

            <com.webmne.salestracker.widget.TfTextView
                android:id="@+id/txtWeek"
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="@dimen/dimen_28dp"
                android:gravity="center"
                android:text="W"
                android:textColor="@color/white" />

            <View
                android:layout_width="@dimen/dimen_.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:background="@color/white" />

            <com.webmne.salestracker.widget.TfTextView
                android:id="@+id/txtMonth"
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="@dimen/dimen_28dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</layout>